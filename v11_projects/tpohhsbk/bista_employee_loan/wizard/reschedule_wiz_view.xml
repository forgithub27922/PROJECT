<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Loan report print form view-->
    <record id="loan_reschedule_installment" model="ir.ui.view">
        <field name="name">Reschedule Installment</field>
        <field name="model">reschedule.installment.wizard</field>
        <field name="arch" type="xml">
            <form string="eschedule Installment">
                <group col="2">
                    <field name="date_to_schedule" required="1"/>
                </group>
                <footer>
                    <button name="reschedule_installment" string="Reschedule" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>