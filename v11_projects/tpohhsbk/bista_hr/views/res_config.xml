<odoo>
    <record id="res_config_settings_view_form_emp"
            model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']" position="inside">
                <h2>Create User</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         title="Show organizational chart on employee form">
                        <div class="o_setting_left_pane">
                            <field name="is_create_user"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_create_user"/>
                            <div class="text-muted">
                                This will create user when employee created..
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>