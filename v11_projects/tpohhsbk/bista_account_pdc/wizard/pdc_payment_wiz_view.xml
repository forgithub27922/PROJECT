<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view of account pdc wizard -->
    <record id="wiz_view_account_pdc_form" model="ir.ui.view">
        <field name="name">wiz.view.account.pdc.form</field>
        <field name="model">wiz.pdc.payment</field>
        <field name="arch" type="xml">
            <form string="pdc Payment date">
                <group>
                    <field name="effective_date" required="1"/>
                </group>
                <footer>
                    <button name="proceed" string="Proceed" type="object" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>