        <field name="chart_template_id" ref="account_arabic_coa_sbk_abu_dhabi_office"/>
        <field name="name">Vat 5%</field>
        <field name="description">Sales Vat 5% (SBK Abu Dhabi Office)</field>
        <field name="amount">5.0</field>
        <field name="type_tax_use">sale</field>
        <!--<field name="account_id" search="[('code', '=', '49016')]"/>-->
        <!--<field name="refund_account_id" search="[('code', '=', '49016')]"/>-->
