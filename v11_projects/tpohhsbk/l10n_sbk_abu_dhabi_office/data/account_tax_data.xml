        <field name="description">Purchase Vat 5% (SBK Abu Dhabi Office)</field>
        <field name="amount">5.0</field>
        <field name="type_tax_use">purchase</field>
        <!--<field name="account_id" search="[('code', '=', '21801')]"/>-->
