<odoo>

    <!-- From view of the Update New Schedule Interview  Wizard -->
    <record id="view_update_schedule_interview_wizard_form" model="ir.ui.view">
        <field name="name">view.update.schedule.interview.wizard.form</field>
        <field name="model">update.schedule.interview.wizard</field>
        <field name="arch" type="xml">
             <form>
                 <sheet>
                     <group>
                         <field name="interview_date"/>
                         <field name="interview_time" widget="float_time"/>
                         <field name="interview_location"/>
                     </group>
                 </sheet>
                 <footer>
                     <button name="update_schedule_interview" type="object"
                             string="Confirm" class="oe_highlight"/>
                     <button special="cancel" string="Cancel"/>
                 </footer>
             </form>
        </field>
    </record>

</odoo>