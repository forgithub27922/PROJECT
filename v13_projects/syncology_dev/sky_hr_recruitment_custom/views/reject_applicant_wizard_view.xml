<odoo>

    <!-- From view of the Reject Applicant  Wizard -->
    <record id="view_reject_applicant_wizard_form" model="ir.ui.view">
        <field name="name">view.reject.applicant.wizard.form</field>
        <field name="model">reject.applicant.wizard</field>
        <field name="arch" type="xml">
             <form>
                 <sheet>
                     <group>
                         <field name="reason" required="1"/>
                     </group>
                 </sheet>
                 <footer>
                     <button name="reject_applicant_interview" type="object"
                             string="Confirm" class="oe_highlight"/>
                     <button special="cancel" string="Cancel"/>
                 </footer>
             </form>
        </field>
    </record>

</odoo>