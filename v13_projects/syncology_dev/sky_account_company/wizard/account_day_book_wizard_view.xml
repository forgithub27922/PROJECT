<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- base_accounting_kit Inherit Form view of Account Day Book Report-->
    <record id="inherit_account_day_book_form_view" model="ir.ui.view">
        <field name="name">inherit.account.day.book.form.view</field>
        <field name="model">account.day.book.report</field>
        <field name="inherit_id" ref="base_accounting_kit.account_day_book_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/field[@name='company_id']" position="attributes">
                <attribute name="string">School</attribute>
            </xpath>
        </field>
    </record>
</odoo>