<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- base_accounting_kit Inherit Recurring Templates Form view-->
    <record id="inherit_account_recurring_payments_form_view" model="ir.ui.view">
        <field name="name">Recurring Template</field>
        <field name="model">account.recurring.payments</field>
        <field name="inherit_id" ref="base_accounting_kit.account_recurring_payments_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[3]/field[@name='company_id']" position="attributes">
                <attribute name="string">School</attribute>
            </xpath>
        </field>
    </record>
</odoo>