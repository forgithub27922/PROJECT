                                   domain="[('is_accessory_part','=',True)]"/>
                            <!--<field name="connect_shopware"/> #Odoo13Change
                            <field name="connect_magento"/>-->
                            <field name="position"/>
                        </tree>
                    </field>
                    <!--</group>-->
                </field>
            </field>
        </record>


