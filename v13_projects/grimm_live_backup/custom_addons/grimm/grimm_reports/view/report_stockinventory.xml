<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_inventory_doc">
            <t t-set="doc" t-value="doc.with_context({'lang':user.lang})"/>
            <t t-call="grimm_reports.grimm_layout">
                <div class="page">
                    <t t-call="grimm_reports.grimm_report_layout_header"/>
                    <h2>Stock Inventory</h2>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Inventory</strong>
                                </th>
                                <th>
                                    <strong>Date</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.name"/>
                                </td>
                                <td>
                                    <span t-field="doc.date" t-options="{'format': 'dd.MM.yyyy'}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <t t-set="locations"
                       t-value="(doc.line_ids.mapped('location_id')).sorted(key=lambda x: x.location_id.name)"/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th groups="stock.group_stock_multi_locations">
                                    <strong>Location</strong>
                                </th>
                                <th>
                                    <strong>Product</strong>
                                </th>
                                <th groups="stock.group_production_lot">
                                    <strong>Production Lot</strong>
                                </th>
                                <th groups="stock.group_tracking_lot">
                                    <strong>Package</strong>
                                </th>
                                <th class="text-right">
                                    <strong>Quantity</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="locations" t-as="location">
                                <tr groups="stock.group_stock_multi_locations">
                                    <td colspan="2">
                                        <strong t-esc="location.name"/>
                                    </td>
                                    <td groups="stock.group_production_lot"></td>
                                    <td groups="stock.group_tracking_lot"></td>
                                    <td></td>
                                </tr>
                                <tr t-foreach="(doc.line_ids.sorted(key=lambda x: x.product_id.name)).filtered(lambda line: line.location_id.id == location.id)"
                                    t-as="line">
                                    <td groups="stock.group_stock_multi_locations"></td>
                                    <td>
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td groups="stock.group_production_lot">
                                        <span t-field="line.prod_lot_id"/>
                                    </td>
                                    <td groups="stock.group_tracking_lot">
                                        <span t-field="line.package_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom_id" groups="product.group_uom"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <t t-if="doc.filter == 'product' and doc.product_id">
                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total Quantity</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="doc.total_qty"/>
                                            <span t-field="doc.product_id.uom_id"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <table class="table table-condensed" style="width: 50%;">
                        <thead>
                            <t t-foreach="[1, 2, 3, 4]" t-as="i">
                                <tr>
                                    <td colspan="4"></td>
                                </tr>
                            </t>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2" class="blank_underline"></td>
                                <td colspan="2"></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <p>Datum/Unterschrift ZÃ¤hler</p>
                                </td>
                                <td colspan="2"></td>
                            </tr>
                            <t t-foreach="[1, 2]" t-as="i">
                                <tr>
                                    <td colspan="4"></td>
                                </tr>
                            </t>
                            <tr>
                                <td colspan="2" class="blank_underline"></td>
                                <td colspan="2"></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <p>Datum/Unterschrift Schreiber</p>
                                </td>
                                <td colspan="2"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="report_inventory">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="grimm_reports.report_inventory_doc" t-lang="user.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
