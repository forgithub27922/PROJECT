<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!--    form view of customer room-->
    <record id="view_customer_roomno_form" model="ir.ui.view">
        <field name="name">view.cust.roomno.form</field>
        <field name="model">customer.roomno</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="4" col="4">
                    <field name="check_in"/>
                    <field name="check_out"/>
                </group>
                <group colspan="4" col="4">
                    <field name="room_Ame_id"/>
                    <field name="description"/>
                    <field name="duration"/>
                    <field name="unit_price"/>
                    <field name="taxes"/>
                    <field name="amount_room"/>
                </group>
            </form>
        </field>
    </record>


    <!--    tree view of customer room-->
    <record id="view_customer_roomno_tree" model="ir.ui.view">
        <field name="name">view.cust.roomno.tree</field>
        <field name="model">customer.roomno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="room_Ame_id"/>
                <field name="description"/>

                <field name="duration"/>
                <field name="unit_price"/>
                <field name="taxes"/>
                <field name="amount_room"/>
            </tree>
        </field>
    </record>


</odoo>