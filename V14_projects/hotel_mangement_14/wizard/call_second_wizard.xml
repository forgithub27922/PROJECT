<?xml version="1.0" encoding="UTF-8" ?>


<odoo>
    <!--form view of the call second wizard-->
    <record id="call_second_wizard_form" model="ir.ui.view">
        <field name="name">call.second.wizard.form</field>
        <field name="model">call.second.wiz</field>
        <field name="arch" type="xml">
            <form>
                <h2>It's A Second Wizard</h2>
                <footer>

                    <button name="call_second_wiz" type="object" string="Call Second Wizard" class="btn-success"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--    action of the call second wizard-->
    <record id="action_second_wizard" model="ir.actions.act_window">
        <field name="name">Second Wizard</field>
        <field name="res_model">call.second.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>