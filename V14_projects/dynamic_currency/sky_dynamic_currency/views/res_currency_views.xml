<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record model='ir.ui.view' id='view_res_currency_form'>
        <field name='name'>res.currency.form.view</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name='arch' type='xml'>
            <field name="rate" position="after">
                <field name="inverse_rate"/>
            </field>
        </field>
    </record>

    <record model='ir.ui.view' id='view_currency_tree'>
        <field name='name'>res.currency.tree.view</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_tree"/>
        <field name='arch' type='xml'>
            <field name="rate" position="after">
                <field name="inverse_rate"/>
            </field>
        </field>
    </record>

</odoo>
