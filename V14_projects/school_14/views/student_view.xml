    <!-- Calendar view of Student -->
    <!-- date_start and date_stop attributes will be used when the event is of more then on day in case of date field and more time in case of datetime -->
    <!-- the modes day and week will be used only for datetime type of fields as with date it won't make sense -->
    <!-- the modes month,year can be used for both date and datetime -->
    <!-- for date fields month would be the best mode to have -->
    <!-- using color attribute you can keep 1 color for a matching value in the field -->
    <!-- for color we can use either a selection or a many2one field -->
    <!-- so whichever records have the same value in the field mentioned as color will have the same color -->
    <!-- hide_time will hide the time from the record displayed on the single day in case of date time field -->
    <!-- event_limit will display only limited records on a day and the rest would be display as +<number> -->
    <record id="view_stud_calendar" model="ir.ui.view">
        <field name="name">view.stud.calendar</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <calendar date_start="first_attendance" date_stop="last_attendance" color="standard_id" mode="month"
                      hide_time="1" event_limit="2">
                <field name="name"/>
            </calendar>
        </field>
    </record>

