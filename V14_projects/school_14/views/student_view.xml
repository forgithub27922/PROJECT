    <!-- Tree view of Student -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">view.student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <!-- tree tag to denote we are creating a tree view -->
            <!-- Keep only important fields in the tree view -->
            <!--            <tree create="false" edit="false" delete="false" editable="top">-->
            <!--                  decoration-success="state=='accepted'" decoration-danger="state=='rejected'"-->
            <!-- multi_edit is used to edit multiple records together on a tree view -->
            <!-- Using default_order="<field_name>" you can sort the records on the tree when this view gets loaded-->
            <!-- The field must exist in the tree view which you're using here. -->
            <!-- decoration-* are used to decorate the records in terms of colors or bold and italic -->
            <!-- decoration-* are keys and the value is a condition based on some field of the record. -->
            <!-- The field used here also must exist in the tree view -->
            <tree multi_edit="1" default_order="name" decoration-info="state=='draft'" decoration-muted="state=='left'"
                  decoration-bf="state=='accepted'" decoration-it="state=='rejected'"
                  decoration-warning="state=='interviewed'" decoration-primary="state=='joined'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="age" optional="show" avg="Age"/>
                <!-- using invisible attribute you can hide the field -->
                <!--                <field name="active" invisible="1"/>-->
                <!-- when you want to keep a toggle button for a boolean field you can use the boolean_toggle widget -->
                <field name="active" widget="boolean_toggle"/>
                <!-- optional is an attribute which shows or hides the field on the tree view -->
                <!-- if optional="hide" the field will not be displayed by default but you can get it shown by clicking on the 3 dots on the right top of the list view -->
                <!-- if optional="show" the field will be displayed by default but you can get it hidden by clicking on the 3 dots on the right top of the list view -->
                <field name="gender" optional="show"/>
                <!-- You can use sum attribute to get the total of your numerical field at the bottom of the list/tree view -->
                <field name="fee" optional="hide" sum="Fee"/>
                <field name="total_marks" optional="hide" sum="Total Marks"/>
                <field name="total_obt_marks" optional="hide" sum="Total Obt Marks"/>
                <!-- you can use avg attribute to get the average of your numerical field at the bottom of the list/tree view -->
                <field name="percentage" widget="progressbar" optional="hide" avg="Percentage"/>
                <!-- You can use the string attribute which will change the label of the field for this particular view only -->
                <field name="birthdate" string="Date of Birth" optional="show"/>
                <!-- Company field visible only if the group is multi-company. -->
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
                <!--            TODO:Add method to open the form view for the record on an editable tree view     <button name="setup" type="open" string="SETUP"/>-->
            </tree>
        </field>
    </record>

