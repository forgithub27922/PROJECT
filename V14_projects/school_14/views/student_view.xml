    <!-- Graph view of Student -->
    <!-- third type is pie and here we have only two axis -->
    <!-- so we will give only one row/column and one measure -->
    <!-- if you give a row and column or multiple rows/columns it will create combinations for the legends -->
    <!-- for e.g. in case of standard and gender the combination will be standard1/female, standard2/female, standard1/male, standard2/male etc. -->
    <!-- measure will be distributed in percentage in the pie with different colors -->
    <record id="view_stud_graph" model="ir.ui.view">
        <field name="name">view.stud.graph</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <graph type="pie">
                <!--                <field name="gender" type="row"/>-->
                <field name="standard_id" type="column"/>
                <field name="fee" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View of Student -->
    <!-- pivot view used to create pivot tables and is dynamic -->
    <!-- you cna use row, col and measure just like graph -->
    <!-- here you can also use interval on the date type fields where you can give day, week, month, quarter or year and that will be displayed -->
    <record id="view_stud_pivot" model="ir.ui.view">
        <field name="name">view.stud.pivot</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="birthdate" type="col" interval="month"/>
                <field name="standard_id" type="row"/>
                <field name="gender" type="row"/>
                <field name="age" type="measure"/>
                <field name="fee" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Kanban view of Student -->
    <!-- kanban view is created using Qweb templates -->
    <record id="view_stud_kanban" model="ir.ui.view">
        <field name="name">view.stud.kanban</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <kanban>
                <!-- the fields used with record will be listed here -->
                <field name="id"/>
                <field name="color"/>
                <!-- templates tag is a must to use -->
                <templates>
                    <!-- we will give the name as kanban-box to the t tag which is a template -->
                    <t t-name="kanban-box">
                        <!-- Inside the template everything will be designed using div and different classes -->
                        <!-- our main div will have atleast oe_kanban_global_click and oe_kanban_card classes to have a standard design -->
                        <!-- oe_kanban_color_#{} fetches the color from the record's color field and dispaly it on the kanban card-->
                        <!-- kanban_get_color(record.<color_field_name>.raw_value) is used to fetch the color -->
                        <!-- color field must be mentioned before the templates in the kanban view -->
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click oe_kanban_card">
                            <!-- we will use the div with class o_kanban_image to display an image -->
                            <div class="o_kanban_image">
                                <!-- img tag will be used to display the image -->
                                <!-- we will use the oe_avatar class to use 128 image -->
                                <!-- the t-att-src attribute is src to the image -->
                                <!-- we will use the kanban_image() method to fetch the image from the record -->
                                <!-- the params are <model_name>, <image_field_name>, record.id.raw_value -->
                                <!-- the id field must be mentioned before the templates in the kanban view -->
                                <img alt="No Image"
                                     class="oe_avatar"
                                     t-att-src="kanban_image('student.student', 'image', record.id.raw_value)"/>
                            </div>
                            <div>
                                <!-- the fields to be displayed on the kanban -->
                                <field name="name"/>
                                <br/>
                                <field name="age"/>
                                <br/>
                                <!-- the email, url, phone, priority widgets work same as form view -->
                                <field name="email" widget="email"/>
                                <br/>
                                <field name="url" widget="url"/>
                                <br/>
                                <field name="phone" widget="phone"/>
                                <br/>
                                <field name="priority" widget="priority"/>
                                <br/>
                                <!-- Here for m2m field you can display with colors using the options attribute -->
                                <!-- options attribute will have the key 'color_field' and the value will be the color field on the m2m models -->
                                <!-- we have a color field on activity so we have mentioned that name -->
                                <field name="activity_ids" options="{'color_field':'color'}"/>
                            </div>
                            <!-- Another section to have the dropdown menus -->
                            <div class="o_dropdown_kanban dropdown">
                                <!-- used to display 3 dots on the right top of the kanban card -->
                                <a role="button" class="dropdown-toggle o-no-caret btn"
                                   data-toggle="dropdown" data-display="static"
                                   href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <!-- Dropdown menu parent creted using class dropdown-menu and role menu -->
                                <div class="dropdown-menu" role="menu">
                                    <!-- Creating menuitems inside the dropdown menu using role menuitem -->
                                    <div role="menuitem">
                                        <!-- type="open" used to open the record on which we are -->
                                        <a type="open">Open</a>
                                    </div>
                                    <div role="menuitem">
                                        <!-- type="edit" used to open the record on which we are in edit mode -->
                                        <a type="edit">Edit</a>
                                    </div>
                                    <!-- Adding a separator / horizontal line -->
                                    <div role="separator" class="dropdown-divider"></div>
                                    <div role="menuitem">
                                        <!-- Using type="object" to call method of models -->
                                        <!-- same like button -->
                                        <a type="object" name="stud_join">Join</a>
                                    </div>
                                    <div role="menuitem">
                                        <!-- Using type="action" to trigger an action just like button -->
                                        <a type="action" name="%(action_marks)d">Marks</a>
                                    </div>
                                    <div role="separator" class="dropdown-divider"></div>
                                    <!-- Adding a colorpicker for kanban card -->
                                    <!-- The color selected will be applied to the card -->
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- This will be used to load the views
     We will use record tag to create an action
     Here also there are two params and we will have unique id for action as well
     The models will be ir.actions.act_window to create an action -->
    <!-- Action of Student -->
    <record id="action_student" model="ir.actions.act_window">
        <!-- the name will be linked to the menu in case no name is given to the menu -->
        <field name="name">Students</field>
        <!-- the res_model will be the name of models for which the action is created -->
        <field name="res_model">student.student</field>
        <!-- the modes of views which will be available and you can switch between -->
        <!-- the first view mentioned will be loaded when this action is triggered -->
        <field name="view_mode">tree,form,calendar,graph,pivot,kanban</field>
        <!-- Setting default search field with value using search_default_<field_name>: value -->
        <!-- Setting default filter using search_default_<filter_name>:1 -->
        <field name="context">{'search_default_age':22, 'search_default_fil_male':1, 'search_default_grp_by_gender':1}
        </field>
    </record>


    <!-- Using action to call an action when a menu is clicked -->
    <!-- Menu of Students -->
    <menuitem id="menu_student" action="action_student" parent="menu_school_main"/>

    <!-- Action of Female Students -->
    <record id="action_female_students" model="ir.actions.act_window">
        <field name="name">Female Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form,calendar</field>
        <!-- Using Domain on Action -->
        <field name="domain">[('gender','=','female')]</field>
        <!-- Using context to set default value for a field using default_<field_name> -->
        <field name="context">{'default_gender':'female', 'form_view_ref':'school_14.view_student_form_male_female',
            'tree_view_ref':'school_14.view_student_tree_male_female'}
        </field>
    </record>

    <!-- Menu of Female Students -->
    <menuitem id="menu_student_female" action="action_female_students" parent="menu_school_main"/>

    <!-- Action of Male Students -->
    <record id="action_male_students" model="ir.actions.act_window">
        <field name="name">Male Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('gender','=','male')]</field>
        <field name="context">{'default_gender':'male'}</field>
    </record>

    <!-- Linking form view to an action -->
    <record model="ir.actions.act_window.view" id="action_male_stud_form_view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_student_form_male_female"/>
        <field name="act_window_id" ref="action_male_students"/>
    </record>

    <!-- Linking tree view to an action -->
    <record model="ir.actions.act_window.view" id="action_male_stud_tree_view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_student_tree_male_female"/>
        <field name="act_window_id" ref="action_male_students"/>
    </record>

    <!-- Menu of Male Students -->
    <menuitem id="menu_student_male" action="action_male_students" parent="menu_school_main"/>

    <!-- Form view for standard -->
    <record id="view_standard_form" model="ir.ui.view">
        <field name="name">view.standard.form</field>
        <field name="model">school.standard</field>
        <field name="arch" type="xml">
            <form>
                <group name="grp_main">
                    <field name="std_name"/>
                    <field name="code"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree view for standard -->
    <record id="view_standard_tree" model="ir.ui.view">
        <field name="name">view.standard.tree</field>
        <field name="model">school.standard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="std_name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Action of standard -->
    <record id="action_standard" model="ir.actions.act_window">
        <field name="name">Standards</field>
        <field name="res_model">school.standard</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu of Standard -->
    <menuitem id="menu_standard" action="action_standard" parent="menu_school_config"/>

    <!-- Form view for Activity -->
    <record id="view_activity_form" model="ir.ui.view">
        <field name="name">view.activity.form</field>
        <field name="model">student.activity</field>
        <field name="arch" type="xml">
            <form>
                <group name="grp_main">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="standard_id"/>
                    <field name="color" widget="color_picker"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree view for Activity -->
    <record id="view_activity_tree" model="ir.ui.view">
        <field name="name">view.activity.tree</field>
        <field name="model">student.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="standard_id"/>
            </tree>
        </field>
    </record>

    <!-- Action of Activities -->
    <record id="action_activity" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">student.activity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu of Activity -->
    <menuitem id="menu_act" action="action_activity" parent="menu_school_config"/>


