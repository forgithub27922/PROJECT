<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Using menuitem tag to create a menu -->
    <!-- Menu of the Application -->
    <menuitem id="menu_school_root" name="School Management"/>

    <!-- Using parent attribute to assign a submenu -->
    <!-- Using sequence attribute to define the display sequence for a menu -->
    <!-- The lower sequence menu will be displayed first and then the higher sequence menu -->
    <!-- Main Menu for School -->
    <menuitem id="menu_school_main" name="School" parent="menu_school_root" sequence="1"/>

    <!-- Using parent attribute to assign a submenu -->
    <!-- Main Menu for Configuration     -->
    <menuitem id="menu_school_config" name="Configuration" parent="menu_school_root" sequence="10"/>


    <!-- Form view of Marks -->
    <record id="view_marks_form" model="ir.ui.view">
        <field name="name">view.marks.form</field>
        <field name="model">student.marks</field>
        <field name="arch" type="xml">
            <form>
                <group name="grp_main" colspan="4" col="4">
                    <field name="student_id"/>
                    <field name="subject"/>
                    <field name="total_marks"/>
                    <field name="min_marks"/>
                    <field name="obt_marks"/>
                    <field name="percentage"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree view of Marks -->
    <record id="view_marks_tree" model="ir.ui.view">
        <field name="name">view.marks.tree</field>
        <field name="model">student.marks</field>
        <field name="arch" type="xml">
            <!--            <tree editable="top">-->
            <tree editable="bottom">
                <field name="student_id"/>
                <field name="subject"/>
                <field name="total_marks"/>
                <field name="min_marks"/>
                <field name="obt_marks"/>
                <field name="percentage"/>
            </tree>
        </field>
    </record>

    <!-- Search view of Marks -->
    <record id="view_marks_search" model="ir.ui.view">
        <field name="name">view.marks.search</field>
        <field name="model">student.marks</field>
        <field name="arch" type="xml">
            <search>
                <field name="subject"/>
                <field name="student_id"/>
            </search>
        </field>
    </record>

    <!-- Action of Marks -->
    <record id="action_marks" model="ir.actions.act_window">
        <field name="name">Marks</field>
        <field name="res_model">student.marks</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Main Menu for Exam    -->
    <menuitem id="menu_school_exam" name="Exam" parent="menu_school_root" sequence="2"/>

    <!-- Menu for Marks -->
    <menuitem id="menu_marks" action="action_marks" parent="menu_school_exam"/>


    <!--
    record tag used to create record of specified models.
    There are two attributes of the record tag id and models.
    id must be unique throughout the module for a view otherwise it will override
    Here we are creating view so models is give ir.ui.view
    -->
    <!-- Form view of Student -->
    <record id="view_student_form" model="ir.ui.view">
        <!-- name = the name of the view. -->
        <field name="name">view.student.form</field>
        <!-- models = the models for which you are creating view -->
        <field name="model">student.student</field>
        <!-- arch = The architecture of your view -->
        <field name="arch" type="xml">
            <!-- form tag to denote we are creating a form view -->
            <!-- You can put all or some fields as per your requirement in the views -->
            <!--            <form create="0" edit="0" delete="0">-->
            <form>
                <header>
                    <!--                    <label for="name" string="Header....."/>-->
                    <!--                    <button name="st_archive" string="Sample"/>-->
                    <!-- Using the state field and the statusbar widget -->
                    <!-- Using clickable to click on the states on the statusbar -->
                    <button name="stud_interviewed" string="Interview" type="object" states="draft"/>
                    <button name="stud_accept" string="Accept" type="object" states="interviewed"
                            context="{'test_variable': 123}"/>
                    <button name="stud_reject" string="Reject" type="object" states="interviewed,accepted"/>
                    <button name="stud_join" string="Join" type="object" states="accepted"/>
                    <button name="stud_leave" string="Leave" type="object" states="joined"/>
                    <button name="%(action_marks)d" string="Marks" type="action" states="joined"
                            context="{'search_default_student_id':active_id}"/>
                    <!--                    <field name="state" widget="statusbar" statusbar_visible="draft,joined,left"/>-->
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <!-- sheet tag will create a sheet like look of our form -->
                <sheet>
                    <!-- widget web_ribbon used to add a ribbon on your form -->
                    <!-- name will be web_ribbon -->
                    <!-- title will be string displayed on the ribbon -->
                    <!-- bg_color you can use options like bg-danger, bg-success, bg-info,
                    bg-primary, bg-warning ect to have different colored background for ribbon -->
                    <!-- attrs works same as any other element to display/hide the ribbon -->
                    <!-- invisible attribute will be used on attrs with domain to hide the ribbon -->
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="Joined" bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=', 'joined')]}"/>
                    <widget name="web_ribbon" title="Interviewed" bg_color="bg-warning"
                            attrs="{'invisible': [('state', '!=', 'interviewed')]}"/>
                    <div name="button_box" class="oe_button_box">
                        <button name="%(action_marks)d"
                                string="Marks"
                                type="action"
                                icon="fa-dollar"
                                class="oe_stat_button"
                                context="{'search_default_student_id':active_id}">
                            <field name="no_of_marks" widget="statinfo" nolabel="1"/>
                        </button>
                    </div>
                    <!-- label tag used to fetch the label for a field -->
                    <label for="name"/>
                    <!-- You can use HTML Tags -->
                    <h1>
                        <field name="name" placeholder="Name of the Student e.g. Virat Kohli" style="color:blue"/>
                    </h1>
                    <!-- Using image widget with avatar class -->
                    <field name="image" widget="image" class="oe_avatar"/>
                    <!-- If you have used group all the labels of the group will automatically come -->
                    <!-- Spanning the group -->
                    <group name="grp_main" colspan="4" col="4">
                        <field name="sequence"/>
                        <field name="student_code" style="color:green;font-size:18px;"/>
                        <field name="roll_no"/>
                        <field name="parent_id"/>
                        <field name="age"/>
                        <!-- Using monetary widget with a float field if not using monetary field -->
                        <field name="fee" widget="monetary" options="{'currency_field':'currency_id'}"/>
                        <field name="active"/>
                        <!-- For mandatory field use required attribute -->
                        <!-- help attribute is used for tooltips -->
                        <field name="gender" required="1" help="test help"/>
                        <field name="birthdate"/>
                        <!-- You can add a selection widget to an m2o field which will block record creation and updation -->
                        <!--It will also disable searching feature and will list all records -->
                        <!--                        <field name="standard_id" widget="selection"/>-->
                        <!-- If there are only a few records you can also use a radio widget on selection field as well -->
                        <!--                        <field name="standard_id" widget="radio"/>-->
                        <!-- In case you want to keep the searching feature and still block creation and updation you can use options -->
                        <!-- options is a dictionary which uses no_create for creation blocking and no_open for updation blocking-->
                        <!--                        <field name="standard_id" options="{'no_create':1, 'no_open':1}"/>-->
                        <field name="standard_id"/>
                        <field name="std_code"/>
                        <field name="first_attendance"/>
                        <!-- For making a field readonly you can use the readonly attribute -->
                        <!--                        <field name="last_attendance" readonly="1"/>-->
                        <field name="last_attendance"/>
                        <!-- For hiding the typed words we can use the password attribute -->
                        <field name="password" password="*"
                               attrs="{'required':[('standard_id','!=', False)], 'readonly':[('standard_id','=', False)]}"/>
                        <!-- email widget will allow to send emails via an installed email client on your system -->
                        <!-- when you click on the email it opens a new email window with the email in the to field in your email client -->
                        <field name="email" widget="email" attrs="{'invisible':[('standard_id','=',False)]}"/>
                        <!-- It will open the url in the browser -->
                        <field name="url" widget="url" class="field_color"/>
                        <!-- This will ask for an option to dial the phone no to make a call -->
                        <field name="phone" widget="phone"/>
                        <!-- This shows the float field as time where you can enter time such as working hours -->
                        <field name="school_hours" widget="float_time"/>
                        <!-- This will enable to you to set priority on the records stars will be displayed-->
                        <field name="priority" widget="priority"/>
                        <!-- You can use the radio widget with selection field to display radio buttons -->
                        <field name="shift" widget="radio"/>
                        <field name="ref"/>
                        <field name="currency_id" domain="[('active','=',True)]"/>
                        <field name="annual_fees"/>
                        <!-- Invisible file name field to save the file name for the file -->
                        <field name="file_name" invisible="1"/>
                        <field name="doc" filename="file_name"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <!-- Color field which is an integer field -->
                        <!-- The widget color_picker will give you a limited options of colors to select from -->
                        <field name="color" widget="color_picker"/>
                    </group>
                    <!-- Seaprator tag used for bigger fields such as text, html, o2m, m2m etc. -->
                    <!--
                    <separator string="Notes"/>
                    <field name="notes" groups="school_14.grp_school_admin"/>
                    <separator string="Comments"/>
                    <field name="comments"/> -->
                    <!-- To have a look with tabs we use the notebook and page tags -->
                    <notebook>
                        <!-- Each page is a tab in notebook -->
                        <page name="pg_marks" string="Marks">
                            <field name="marks_ids">
                                <tree>
                                    <field name="subject"/>
                                    <field name="total_marks"/>
                                    <field name="min_marks"/>
                                    <field name="obt_marks"/>
                                    <field name="percentage"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="subject"/>
                                        <field name="total_marks"/>
                                        <field name="min_marks"/>
                                        <field name="obt_marks"/>
                                        <field name="percentage"/>
                                    </group>
                                </form>
                            </field>
                            <group colspan="4" col="6">
                                <field name="total_marks"/>
                                <field name="total_obt_marks"/>
                                <field name="percentage" nolabel="1" widget="percentpie"/>
                            </group>
                        </page>
                        <page name="pg_activity" string="Activities">
                            <!-- instead of normal m2m field view if you want to have a tags view then
                            you can use the widget many2many_tags with only m2m field -->
                            <!--                            <field name="activity_ids" widget="many2many_tags"/>-->
                            <!-- instead of normal m2m field view if you want to have a checkbox view then
                            you can use the widget many2many_checkboxes with only m2m field -->
                            <!-- Adding a static domain with OR Condition -->
                            <!--                            <field name="activity_ids" widget="many2many_checkboxes" domain="['|',('name','like','ing'),('name','like','all')]"/>-->
                            <!-- Adding a dynamic domain using a field's value from the view -->
                            <!--                            <field name="activity_ids" domain="[('standard_id','=',standard_id)]" widget="many2many_tags"/>-->
                            <!-- Adding color options to display colors on your tags in m2m fields -->
                            <!-- Options is a dictionary where you need to have the key as 'color_filed' and value will be the field for color defined on the models of m2m field-->
                            <!-- in the below case color field must be defined on the student.activity models -->
                            <field name="activity_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        </page>
                        <page name="pg_sub" string="Subordinates">
                            <field name="child_ids" readonly="1"/>
                        </page>
                        <page name="pg_notes" string="Notes">
                            <!-- Giving access to see the field to a specific group -->
                            <field name="notes" groups="school_14.grp_school_admin"/>
                        </page>
                        <page name="pg_comments" string="Comments">
                            <group>
                                <!-- hiding the label of a field inside the group using nolabel attribute-->
                                <field name="comments" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="create_record" string="Create" type="object" class="btn-primary"/>
                    <button name="update_record" string="Update" type="object" class="btn-success"/>
                    <button name="browse_record" string="Browse" type="object" class="btn-secondary"/>
                    <button name="read_record" string="Read" type="object" class="btn-info"/>
                    <button name="duplicate_record" string="Duplicate" type="object" class="btn-warning"/>
                    <button name="delete_record" string="Delete" type="object" class="btn-danger"/>
                    <button name="search_record" string="Search" type="object" class="btn-link"/>
                    <button name="search_read_record" string="Search Read" type="object"/>
                    <button name="read_group_record" string="Read Group" type="object"/>
                    <label for="name" string="Footer......"/>
                </footer>
            </form>
        </field>
    </record>

